<script type="module">
  const form = document.querySelector('#calc-form');
  const result = document.querySelector('#result');

  form?.addEventListener('input', () => {
    const monto = parseFloat(document.querySelector('#monto')?.value || '0');
    const anioInicio = parseInt(document.querySelector('#anioInicio')?.value || '0');
    const anioFinal = parseInt(document.querySelector('#anioFinal')?.value || '0');
    const inflacion = parseFloat(document.querySelector('#inflacion')?.value || '0') / 100;

    if (!monto || !anioInicio || !anioFinal || !inflacion) {
      result.textContent = 'Completa todos los campos.';
      return;
    }

    const a침os = anioFinal - anioInicio;
    if (a침os < 0) {
      result.textContent = '丘멆잺 El a침o final debe ser mayor al inicial.';
      return;
    }

    // F칩rmula: valorActual = monto * (1 - inflacion)^a침os
    const valorActual = monto * Math.pow(1 - inflacion, a침os);
    const perdida = monto - valorActual;

    result.innerHTML = `
      En ${a침os} a침os, tu dinero perdi칩 aproximadamente 
      <span style="color:#e74c3c;">$${perdida.toFixed(2)}</span> de su valor.<br>
      Hoy equivale a <span style="color:#27ae60;">$${valorActual.toFixed(2)}</span>.
    `;
  });
</script>

